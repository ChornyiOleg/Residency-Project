<div>
  <section class="vh-100 bg-image mb-130">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
      <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12 col-md-9 col-lg-7 col-xl-6 mt-110">
            <div class="card" style="border-radius: 15px;">
              <div class="card-body p-5 bg-secondary" >
                <h2 class="text-uppercase text-center mb-5 text-white">Sign In</h2>


                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class='form-group has-feedback'>
                  <%= f.input :email,
                              required: false,
                              autofocus: true,
                              input_html: {autocomplete: "email", class: "form-control form-control-lg", placeholder: "Email"}
                  %>
                  <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                </div>
                <div class="form-group has-feedback">
                  <%= f.input :password,
                              required: false,
                              input_html: {autocomplete: "current-password", class: "form-control form-control-lg", placeholder: "Password"}
                  %>
                  <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                </div>
                <div class="form-group has-feedback">
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                </div>
                <div class="form-group has-feedback">
                  <div class="form-actions">
                    <%= f.button :submit, "Log in", class: "btn btn-primary" %>
                  </div>
                </div>
              <% end %>
              <%= render "devise/shared/links" %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </section>
</div>
