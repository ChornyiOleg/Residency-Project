<div>
  <section class="vh-100 bg-image mb-130">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
      <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12 col-md-9 col-lg-7 col-xl-6 mt-110">
            <div class="card" style="border-radius: 15px;">
              <div class="card-body p-5 bg-secondary" >
                <h2 class="text-uppercase text-center mb-5 text-white">Forgot Your Password?</h2>

              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="form-outline mb-4">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                </div>

                <br>

                <div class="form-actions">
                  <%= f.submit t('devise.Send'), class: "btn btn-primary mb-15" %>
                </div>
              <% end %>

              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  </section>
</div>
