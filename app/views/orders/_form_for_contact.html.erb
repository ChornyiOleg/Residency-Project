<div class="contact_from_box">
    <h4>Want a Free Consultation</h4>
  <%= form_for Order.new do |f| %>
    <div class="row">
      <div class="col-lg-12">
        <div class="form_box mb-15">
          <%= f.label :name %>
          <%= f.text_field :name, required: true, placeholder: "Name" %>
        </div>
      </div>
      <div class="col-lg-12">
        <div class="form_box mb-15">
          <%= f.label :phone %>
          <%= f.text_field :phone, required: true, placeholder: "Phone Number"  %>
        </div>
      </div>
      <div class="col-lg-12">
        <div class="form_box mb-15">
          <%= f.label :info %>
          <%= f.text_area :info, required: true, placeholder: "Your question...", style: "resize: none" %>
        </div>
        <div class="quote_btn">
          <button class="btn" type="submit">Send Request</button>
        </div>
      </div>
    </div>
  <% end %>
  <p class="form-message"></p>
</div>
