<section class="properties-area two ptb-100">
  <div class="container">
    <div class="section-title">
      <h2 class="sub-title"> <%= t('residences.sub-title')%></h2>
      <h2><%= t('residences.sub-title2')%></h2>
    </div>
    <div class="row">
      <% @residence.each do |records| %>
      <div class="col-sm-6 col-lg-4">
        <div class="property-item">
          <div class="top">
            <span> <%= records.country.name %></span>
            <span>For Sell</span>
            <% if records.images.attached? %>
              <%= image_tag records.images.first %>
            <% end %>
          </div>
          <div class="bottom">
            <span>From $ <%= records.cost %></span>
            <h3>
              <%= link_to records.name, records%>
            </h3>
            <a class="location" href="#">
              <i class='bx bx-current-location'></i>
              <%= records.address %>
            </a>
            <ul>
              <li>5 BD</li>
              <li>2 BA</li>
              <li>1800 SF</li>
              <li>6 RM</li>
            </ul>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div class="pagination-area">
      <ul>
        <li>
          <a href="#">Prev</a>
        </li>
        <li>
          <a class="active" href="#">1</a>
        </li>
        <li>
          <a href="#">2</a>
        </li>
        <li>
          <a href="#">3</a>
        </li>
        <li>
          <a href="#">Next</a>
        </li>
      </ul>
    </div>
  </div>
</section>


