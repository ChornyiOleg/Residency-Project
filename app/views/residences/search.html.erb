<div class="breatcome-area d-flex align-items-center">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breatcome-content text-center">
          <div class="breatcome-content-title">
            <h1><%= t('residences.index.Residences')%></h1>
          </div>
          <div class="breatcome-content-text">
            <ul>
              <li><%= link_to t('about.index.home'), root_path, class: "nav-link active" %> <i class="fas fa-chevron-right"></i> <span><%= link_to 'Residences List', residences_path %></span></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% if @programs.empty? %>
  <div class="text-center">
    <h2><%= t('programs.index.programs_empty')%></h2>
  </div>
  <hr>
<% else %>

  <div class="property-details-area ptb-100">
    <div class="container">
      <div class="row pt-20">
        <div class="col-lg-8">
          <div class="row">
            <% @programs.each do |program| %>
              <div class="col-lg-6 col-md-6">

                <div class="dreamit-single-blog-box">
                  <div class="dreamit-blog-thumb">
                    <%= link_to image_tag(program.image, width: '200', class: "mx-auto d-block") %>
                    <div class="post-catgory">
                      <%= link_to program.name %>
                      <%= link_to program.kind %>
                    </div>
                  </div>
                  <div class="dreamit-blog-content">
                    <div class="dreamit-blog-title">
                      <h2>
                        <%= link_to program.name, program %>
                      </h2>
                    </div>
                    <div class="dreamit-blog-text">
                      <p><%= truncate(strip_tags(program.content.to_s), length: 120) %></p>
                    </div>
                    <div class="country-button">
                      <%= link_to t('programs.index.more'), program, class: 'btn'  %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
<% end %>

<% if @countries.empty? %>
  <div class="text-center">
    <h2><%= t('countries.index.countries_empty')%></h2>
  </div>
  <hr>
<% else %>

  <div class="blog-area style-four pt-65 pb-60">
    <div class="container">
      <div class="row pt-20">
        <div class="col-lg-8">
          <div class="row">
            <% @countries.each do |country| %>
              <div class="col-lg-6 col-md-6">
                <div class="dreamit-single-blog-box">
                  <div class="dreamit-blog-thumb">
                     <%= link_to image_tag(country.image, width: '200', class: "mx-auto d-block"), country  %>
                    <div class="post-catgory">
                      <%= link_to country.name, country %>
                    </div>
                  </div>
                  <div class="country-flag-img">
                      <%= image_tag(country.flag, alt: "about")%>
                    </div>
                  <div class="dreamit-blog-content">
                    <div class="dreamit-blog-title">
                      <h2>
                        <%= link_to country.name, country %>
                      </h2>
                    </div>
                    <div class="dreamit-blog-text">
                      <p><%= truncate(strip_tags(country.content.to_s), length: 120) %></p>
                    </div>
                    <div class="country-button">
                      <%= link_to t('countries.index.read_more'), country, class: 'btn'  %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
<% end %>

<section class="properties-area two ptb-100">
  <div class="container">
    <div class="section-title">
      <h2 class="sub-title"> <%= t('residences.sub-title')%></h2>
      <h2><%= t('residences.sub-title2')%></h2>
    </div>
    <div class="row">
      <% @residences.each do |record| %>
      <div class="col-sm-6 col-lg-4">
        <div class="property-item">
          <div class="top">
            <span> <%= record.country.name %></span>
            <span><%= t('residences.index.sell')%></span>
            <% if record.images.attached? %>
              <%= image_tag record.images.first %>
            <% end %>
          </div>
          <div class="bottom">
            <span><%= t('residences.index.from')%> <%= record.cost %></span>
            <h3>
              <%= link_to record.name, record%>
            </h3>
            <a class="location" href="#">
              <i class='bx bx-current-location'></i>
              <%= record.address %>
            </a>
            <ul>
              <li><%= record.bedroom %> <%= t('residences.index.bd')%></li>
              <li><%= record.bathroom %> <%= t('residences.index.ba')%></li>
              <li><%= record.squarefeet %> <%= t('residences.index.sf')%></li>
              <li><%= record.rooms %> <%= t('residences.index.rm')%></li>
            </ul>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div class="row">
      <% if @countries.empty? %>
        <div class="text-center">
          <h2><%= t('countries.index.countries_empty')%></h2>
        </div>
        <hr>
      <% else %>
        <% @countries.each do |country| %>
              <div class="col-lg-6 col-md-6">
                <div class="dreamit-single-blog-box">
                  <div class="dreamit-blog-thumb">
                     <%= link_to image_tag(country.image, width: '200', class: "mx-auto d-block"), country  %>
                    <div class="post-catgory">
                      <%= link_to country.name, country %>
                    </div>
                  </div>
                  <div class="country-flag-img">
                      <%= image_tag(country.flag, alt: "about")%>
                    </div>
                  <div class="dreamit-blog-content">
                    <div class="dreamit-blog-title">
                      <h2>
                        <%= link_to country.name, country %>
                      </h2>
                    </div>
                    <div class="dreamit-blog-text">
                      <p><%= truncate(strip_tags(country.content.to_s), length: 120) %></p>
                    </div>
                    <div class="country-button">
                      <%= link_to t('countries.index.read_more'), country, class: 'btn'  %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
      <% end %>
    </div>
    <div class="row">
      <% if @programs.empty? %>
        <div class="text-center">
          <h2><%= t('programs.index.programs_empty')%></h2>
        </div>
        <hr>
      <% else %>
        <% @programs.each do |program| %>
              <div class="col-lg-6 col-md-6">

                <div class="dreamit-single-blog-box">
                  <div class="dreamit-blog-thumb">
                    <%= link_to image_tag(program.image, width: '200', class: "mx-auto d-block") %>
                    <div class="post-catgory">
                      <%= link_to program.name %>
                      <%= link_to program.kind %>
                    </div>
                  </div>
                  <div class="dreamit-blog-content">
                    <div class="dreamit-blog-title">
                      <h2>
                        <%= link_to program.name, program %>
                      </h2>
                    </div>
                    <div class="dreamit-blog-text">
                      <p><%= truncate(strip_tags(program.content.to_s), length: 120) %></p>
                    </div>
                    <div class="country-button">
                      <%= link_to t('programs.index.more'), program, class: 'btn'  %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
      <% end %>
    </div>
    <div class="row">
      <div class="btn-group-fluid align-items-center">
        <div class="btn about-button pt-4">
          <%= link_to t('countries.index.Posts'), posts_path %>
        </div>
        <div class="btn about-button pt-4">
          <%= link_to t('countries.index.countries'), countries_path %>
        </div>
        <div class="btn about-button pt-4">
          <%= link_to t('countries.index.Programs'), programs_path %>
        </div>
      </div>
    </div>
    <div class="pagination-area">
      <ul>
        <li>
          <a class="active" href="#">1</a>
        </li>
        <li>
          <a href="#">2</a>
        </li>
        <li>
          <a href="#">3</a>
        </li>
      </ul>
    </div>
  </div>
</section>


