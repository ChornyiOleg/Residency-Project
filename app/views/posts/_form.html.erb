<div class="container">

  <%= form_with(model: post) do |form| %>
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
        <ul class="list-unstyled">
          <% post.errors.each do |error| %>
            <li class="alert alert-danger"><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form_box mb-15">
      <%= form.label :name, class: "pb-2" %>
      <%= form.text_field :name, class: "form-control", required: true, placeholder: "Name" %>
    </div>

    <div class="form_box mb-15">

      <%= form.label :content, class: "pb-2" %>
      <%= form.text_area :content, class: "form-control", required: true, row: 80, placeholder: "Content" %>


    </div>

    <div class="form_box mb-15">
      <%= form.label :image, class: "img-fluid" %>
      <%= form.file_field :image, class: "form-control", required: true, placeholder: "Image file" %>
    </div>

    <div class="actions py-2 d-flex justify-content-center d-flex align-items-center">
      <%= form.submit(class: "btn btn-success btn-lg") %>
    </div>
  <% end %>
</div>
