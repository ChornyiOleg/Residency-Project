<!--start blog details Area-->
<!--==================================================-->

<p id="notice"><%= notice %></p>

<div class="blog-details pt-65 pb-60">
  <div class="container">
    <div class="row pt-20">
      <div class="col-lg-8 col-md-12">
        <div class="row">
          <div class="col-lg-12 col-md-12">
            <div class="single-blog-details-box">
              <div class="blog-details-box-thumb">
                <%= image_tag @post.image, width: 500, alt: "Post image", class: "img-fluid py-4" %>
              </div>
              <div class="blog-details-content">
                <div class="blog-details-title">
                  <h1><%= @post.name %></h1>
                </div>
                <div class="blog-details-meta-box">
                  <p>360NPAC</p>
                  <h3><%= post.created_at.strftime("%b %d, %Y") %></h3>
                </div>
                <div class="blog-details-content-text">
                  <p><%= @post.content %></p>
                </div>
                <div class="d-flex justify-content-center d-flex align-items-center">
                  <h5>This post has been updated <%= distance_of_time_in_words(Time.now, @post.updated_at) %> ago.</h5>
                </div>

                <div class="btn-group-fluid align-items-center">
                  <div class="btn about-button pt-4">
                    <%= link_to 'Posts', posts_path %>
                  </div>
                  <div class="btn about-button pt-4">
                    <%= link_to 'Countries', posts_path %>
                  </div>
                  <div class="btn about-button pt-4">
                    <%= link_to 'Programs', posts_path %>
                  </div>
                </div>

                <div class="visapro-blog-social">
                  <ul>
                    <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                    <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                    <li><a href="#"><i class="fab fa-google"></i></a></li>
                    <li><a href="#"><i class="fab fa-linkedin-in"></i></a></li>
                    <li><a href="#"><i class="fab fa-pinterest"></i></a></li>
                    <li><a href="#"><i class="fab fa-reddit"></i></a></li>
                  </ul>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>

      <div class="col-lg-4">
        <div class="sidebar-box">
          <div class="sidebar-search">
            <input type="text" name="search" placeholder="Search">
            <button type="text" name="submit"><i class="fas fa-search"></i></button>
          </div>
        </div>
        <div class="sidebar-box">
          <div class="sidebar-title">
            <h2>Categories</h2>
          </div>
          <div class="dreamit-section-bar mb-20"></div>
          <div class="sidebar-category">
            <ul>
              <li><a href="business-visa.html">Business Visa</a></li>
              <li><a href="immigration-visa.html">Immigration Visa</a></li>
              <li><a href="pr-visa.html">PR Visa</a></li>
              <li><a href="student-visa.html">Student Visa</a></li>
              <li><a href="working-visa">Working Visa</a></li>
            </ul>
          </div>
        </div>
        <div class="sidebar-box">
          <%= render 'orders/form_for_sidebar' %>
        </div>
    </div>
  </div>
</div>
</div>