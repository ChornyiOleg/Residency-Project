<!--==================================================-->
<!-- start visapro about Area-->
<!--==================================================-->

<div class="about-area  pt-70 pb-130">
  <div class="container">
    <% @abouts.each do |about| %>
    <div class="row align-items-center">
      <div class="col-lg-6">
        <div class="dreamit-section-title pb-30">
          <div class="dreamit-section-sub-title">
            <h5><%= t('about.index.main')%></h5>
          </div>
          <div class="dreamit-section-main-title">
            <h1><%= about.title %></h1>
          </div>
          <div class="dreamit-section-bar"></div>
          <div class="dreamit-section-bold-text2 pt-40">
            <p><%= about.subtitle %></p>
          </div>
          <% about.advantages.split('-/-').each do |advantages| %>
            <div class="dreamit-section-text pt-15">
              <div class="dreamit-about-icon pr-4">
                <i class="fas fa-check-circle"></i>
                <%= advantages %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="dreamit-thumb">
          <%= image_tag(about.image) %>
        </div>
        <div class="dreamit-single-counter">
          <div class="counter-text">
            <h3 class="counter">100</h3>
            <h3>+</h3>
          </div>
          <div class="counter-title">
            <h4><%= t('about.index.happy')%></h4>
          </div>
        </div>
      </div>
      <div class="col-lg-6 pl-60 mt-80">
        <div class="dreamit-section-bold-text2 pt-10 mb-10">
          <h4><%= t('about.index.benefits')%></h4>
        </div>
        <div class="dreamit-about-content">
          <% about.benefits.split('-/-').each do |benefits| %>
          <div class="dreamit-about-content-inner pb-2 d-flex">
            <div class="dreamit-about-icon pr-4">
              <i class="far fa-check-circle"></i>
            </div>
            <div class="about-content-text">
              <p><%= benefits %></p>
            </div>
          </div>
          <% end %>
        </div>
        <div class="about-button pt-4 ml-45">
          <%= link_to t('about.index.discover'), programs_path %>
        </div>
      </div>
      <% end %>
    </div>
    <div class="visapro-blog-social">
      <ul>
        <li><a href="https://www.facebook.com/"><i class="fab fa-facebook-f"></i></a></li>
        <li><a href="https://www.instagram.com/"><i class="fab fa-instagram"></i></a></li>
        <li><a href="https://www.linkedin.com/"><i class="fab fa-linkedin-in"></i></a></li>
      </ul>
    </div>
  </div>

</div>



