<div class="breatcome-area d-flex align-items-center">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breatcome-content text-center">
          <div class="breatcome-content-title">
            <h1><%= t('residences.index.Residences')%></h1>
          </div>
          <div class="breatcome-content-text">
            <ul>
              <li><%= link_to t('about.index.home'), root_path, class: "nav-link active" %> <i class="fas fa-chevron-right"></i> <span><%= link_to 'Residences List', residences_path %></span></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<section class="properties-area two ptb-100">
  <div class="container">
    <div class="section-title">
      <h2 class="sub-title"><%= t('residences.sub-title4')%></h2>
      <h2><%= t('residences.sub-title2')%></h2>
    </div>
    <div class="row">
      <% @records.each do |record| %>
      <div class="col-sm-6 col-lg-4">
        <div class="property-item">
          <div class="top">
            <span> <%= record.residence.country.name %></span>
            <span><%= t('residences.index.sell')%></span>
            <% if record.residence.images.attached? %>
              <%= image_tag record.residence.images.first %>
            <% end %>
          </div>
          <div class="bottom">
            <span><%= t('residences.index.from')%> <%= record.residence.cost %></span>
            <h3>
              <%= link_to record.residence.name, record%>
            </h3>
            <a class="location" href="#">
              <i class='bx bx-current-location'></i>
              <%= record.residence.address %>
            </a>
            <ul>
              <li><%= record.residence.bedroom %> <%= t('residences.index.bd')%></li>
              <li><%= record.residence.bathroom %> <%= t('residences.index.ba')%></li>
              <li><%= record.residence.squarefeet %> <%= t('residences.index.sf')%></li>
              <li><%= record.residence.rooms %> <%= t('residences.index.rm')%></li>
            </ul>
          </div>
        </div>
      </div>
      <% end %>
      <div class="btn-group-fluid align-items-center">
        <div class="btn about-button pt-4">
          <%= link_to t('countries.index.Posts'), posts_path %>
        </div>
        <div class="btn about-button pt-4">
          <%= link_to t('countries.index.countries'), countries_path %>
        </div>
        <div class="btn about-button pt-4">
          <%= link_to t('countries.index.Programs'), programs_path %>
        </div>
      </div>
    </div>
    <div class="pagination-area">
      <div class="pagination-area mt-5">
        <%= render 'posts/pagination', locals: { pagy: @pagy } %>
      </div>
      </ul>
    </div>
  </div>
</section>


