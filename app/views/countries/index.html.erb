<div class="breatcome-area d-flex align-items-center">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breatcome-content text-center">
          <div class="breatcome-content-title">
            <h1><%= t('countries.index.countries')%></h1>
          </div>
          <div class="breatcome-content-text">
            <ul>
              <li><%= link_to t('about.index.home'), root_path, class: "nav-link active" %> <i class="fas fa-chevron-right"></i> <span><%= link_to 'Countries List', countries_path %></span></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% if @countries.empty? %>
  <div class="text-center">
    <h2><%= t('countries.index.countries_empty')%></h2>
  </div>
  <hr>
<% else %>

  <div class="blog-area style-four pt-65 pb-60">
    <div class="container">
      <div class="row pt-20">
        <div class="col-lg-8">
          <div class="row">
            <% @countries.each do |country| %>
              <div class="col-lg-6 col-md-6">
                <div class="dreamit-single-blog-box">
                  <div class="dreamit-blog-thumb">
                     <%= link_to image_tag(country.image, width: '200', class: "mx-auto d-block"), country  %>
                    <div class="post-catgory">
                      <%= link_to country.name, country %>
                    </div>
                  </div>
                  <div class="country-flag-img">
                      <%= image_tag(country.flag, alt: "about")%>
                    </div>
                  <div class="dreamit-blog-content">
                    <div class="dreamit-blog-title">
                      <h2>
                        <%= link_to country.name, country %>
                      </h2>
                    </div>
                    <div class="dreamit-blog-text">
                      <p><%= truncate(strip_tags(country.content.to_s), length: 120) %></p>
                    </div>
                    <div class="country-button">
                      <%= link_to t('countries.index.read_more'), country, class: 'btn'  %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
<% end %>
<div class="visapro-blog-social">
  <ul>
    <<li><a href="https://www.facebook.com/"><i class="fab fa-facebook-f"></i></a></li>
    <li><a href="https://www.instagram.com/"><i class="fab fa-instagram"></i></a></li>
    <li><a href="https://www.linkedin.com/"><i class="fab fa-linkedin-in"></i></a></li>
  </ul>

  <div class="btn-group-fluid align-items-center">
    <div class="btn about-button pt-4">
      <%= link_to t('countries.index.Posts'), posts_path %>
    </div>
    <div class="btn about-button pt-4">
      <%= link_to t('countries.index.countries'), countries_path %>
    </div>
    <div class="btn about-button pt-4">
      <%= link_to t('countries.index.Programs'), programs_path %>
    </div>
  </div>

</div>

</div>
<div class="row">
  <div class="col-lg-12">
    <div class="pagiation">
      <div class="page-number pt-30">
        <ul>
          <li><a class="active" href="blog-grid.html">1</a></li>
          <li><a href="#">2</a></li>
          <li><a href="#">3</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
</div>
<div class="col-lg-4">
  <div class="sidebar-box">
    <div class="sidebar-search">
      <input type="text" name="search" placeholder="Search">
      <button type="text" name="submit"><i class="fas fa-search"></i></button>
    </div>
  </div>
  <div class="sidebar-box">
    <div class="sidebar-title">
      <h2><%= t('countries.index.Categories')%></h2>
    </div>
    <div class="dreamit-section-bar mb-20"></div>
    <div class="sidebar-category">
      <ul>
        <li><%= link_to 'The Best Residences', residences_path %></li>
        <li><%= link_to 'Immigration Visa', programs_path %></li>
        <li><%= link_to 'Country Of Your Dream', countries_path %></li>
        <li><%= link_to 'Our Blog', blog_path %></li>
        <li><%= link_to 'What We Do For You', abouts_path %></li>
      </ul>
    </div>
  </div>
  <div class="sidebar-category" id="turbo2">
    <%= render 'orders/form_for_home' %>
  </div>
</div>
</div>
</div>
</div>
