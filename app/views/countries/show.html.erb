<meta charset="UTF-8">

<div class="breatcome-area d-flex align-items-center">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breatcome-content text-center">
          <div class="breatcome-content-title">
            <h1><%= @country.name %></h1>
          </div>
          <div class="breatcome-content-text">
            <ul>
              <li><%= link_to 'Home', root_path, class: "nav-link active" %><i class="fas fa-chevron-right"></i> <span><%= link_to 'Countries', countries_path %></span></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!--==================================================-->
<!--start blog details Area-->
<!--==================================================-->

<p id="notice"><%= notice %></p>

<div class="property-details-area ptb-100">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-12">
        <div class="row">
          <div class="col-lg-12 col-md-12">
            <div class="single-blog-details-box">
              <div class="dreamit-country-box">
                <div class="dreamit-country-thumb">
                  <%= image_tag(@country.image, width: '200', class: "mx-auto d-block") %>
                </div>
                <div class="country-flag-img">
                  <%= image_tag(@country.flag, alt: "about")%>
                </div>
                <div class="country-content">
              </div>
              <div class="blog-details-content">
                <div class="blog-details-title">
                  <h1><%= @country.name %></h1>
                </div>

                <div class="blog-details-content-text">
                  <p><%= @country.content %></p>
                </div>
                <div class="d-flex justify-content-center d-flex align-items-center">
                  <h5>This country has been updated <%= distance_of_time_in_words(Time.now, @country.updated_at) %> ago.</h5>
                </div>
              </div>

                <div class="btn-group-fluid align-items-center">
                  <div class="btn about-button pt-4">
                    <%= link_to 'Posts', posts_path %>
                  </div>
                  <div class="btn about-button pt-4">
                    <%= link_to 'Countries', countries_path %>
                  </div>
                  <div class="btn about-button pt-4">
                    <%= link_to 'Programs', programs_path %>
                  </div>
                </div>
                <div class="visapro-blog-social">
                  <ul>
                    <li><a href="https://www.facebook.com/"><i class="fab fa-facebook-f"></i></a></li>
                    <li><a href="https://www.instagram.com/"><i class="fab fa-instagram"></i></a></li>
                    <li><a href="https://www.linkedin.com/"><i class="fab fa-linkedin-in"></i></a></li>
                  </ul>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="sidebar-box">
          <div class="sidebar-search">
            <input type="text" name="search" placeholder="Search">
            <button type="text" name="submit"><i class="fas fa-search"></i></button>
          </div>
        </div>
        <div class="sidebar-box">
          <div class="sidebar-title">
            <h2>Categories</h2>
          </div>
          <div class="dreamit-section-bar mb-20"></div>
          <div class="sidebar-category">
            <ul>
              <li><a href="business-visa.html">Business Visa</a></li>
              <li><a href="immigration-visa.html">Immigration Visa</a></li>
              <li><a href="pr-visa.html">PR Visa</a></li>
              <li><a href="student-visa.html">Student Visa</a></li>
              <li><a href="working-visa">Working Visa</a></li>
            </ul>
          </div>
        </div>
        <div class="sidebar-category">
          <div id="turbo2">
            <%= render 'orders/form_for_home' %>
          </div>
      </div>
      </div>
    </div>
  </div>
</div>





