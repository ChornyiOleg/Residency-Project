<div>
    <%= @program.name %>
</div>

<div class="container">
  <div class="row row-cols-2">
    <% @records.each do |records| %>
      <div class="col">
        <dl>
          <dt> <%= records.name %> </dt>
          <dt> <%= records.cost %> </dt>
          <dt> <%= records.description %> </dt>
        </dl>
        <% if records.images.attached? %>
          <%= image_tag records.images.first, width: '250' %>
        <% end %>
        <%= link_to 'Show', records, class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center d-flex align-items-center">
    <%= render 'posts/pagination', locals: { pagy: @pagy } %>
  </div>
  <div class="d-flex justify-content-center d-flex align-items-center">
    <%== pagy_info(@pagy) %>
  </div>
</div>

