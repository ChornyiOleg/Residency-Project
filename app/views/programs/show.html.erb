<div class="breatcome-area d-flex align-items-center">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breatcome-content text-center">
          <div class="breatcome-content-title">
            <h1><%= @program.name %></h1>
          </div>
          <div class="breatcome-content-text">
            <ul>
              <li><%= link_to 'Home', root_path, class: "nav-link active" %><i class="fas fa-chevron-right"></i> <span><%= link_to 'Programs', programs_path %></span></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!--==================================================-->
<!--start blog details Area-->
<!--==================================================-->

<p id="notice"><%= notice %></p>

<div class="blog-details pt-65 pb-60">
  <div class="container">
    <div class="row pt-20">
      <div class="col-lg-8 col-md-12">
        <div class="row">
          <div class="col-lg-12 col-md-12">
            <div class="single-blog-details-box">
              <div class="dreamit-country-box">
                <div class="dreamit-country-thumb">
                  <%= image_tag(@program.image, width: '200', class: "mx-auto d-block") %>
                </div>
                <div class="country-content">
                </div>
                <div class="blog-details-content">
                  <div class="blog-details-title">
                    <h1><%= @program.name %></h1>
                  </div>

                  <div class="blog-details-content-text">
                    <p><%= @program.content %></p>
                  </div>
                  <div class="d-flex justify-content-center d-flex align-items-center">
                    <h5>This program has been updated <%= distance_of_time_in_words(Time.now, @program.updated_at) %> ago.</h5>
                  </div>
                </div>

                <div class="btn-group-fluid align-items-center">
                  <div class="btn about-button pt-4">
                    <%= link_to 'Posts', posts_path %>
                  </div>
                  <div class="btn about-button pt-4">
                    <%= link_to 'Countries', countries_path %>
                  </div>
                  <div class="btn about-button pt-4">
                    <%= link_to 'Programs', programs_path %>
                  </div>
                </div>
                <div class="visapro-blog-social">
                  <ul>
                    <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                    <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                    <li><a href="#"><i class="fab fa-google"></i></a></li>
                    <li><a href="#"><i class="fab fa-linkedin-in"></i></a></li>
                    <li><a href="#"><i class="fab fa-pinterest"></i></a></li>
                    <li><a href="#"><i class="fab fa-reddit"></i></a></li>
                  </ul>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="sidebar-box">
          <div class="sidebar-search">
            <input type="text" name="search" placeholder="Search">
            <button type="text" name="submit"><i class="fas fa-search"></i></button>
          </div>
        </div>
        <div class="sidebar-box">
          <div class="sidebar-title">
            <h2>Categories</h2>
          </div>
          <div class="dreamit-section-bar mb-20"></div>
          <div class="sidebar-category">
            <ul>
              <li><a href="#">Business Visa</a></li>
              <li><a href="#">Immigration Visa</a></li>
              <li><a href="#">PR Visa</a></li>
              <li><a href="#">Student Visa</a></li>
              <li><a href="#">Working Visa</a></li>
            </ul>
          </div>
        </div>
        <div class="sidebar-box">
            <div class="sidebar-category">
              <%= render 'orders/form_for_sidebar' %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>


