<div class="breatcome-area d-flex align-items-center">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breatcome-content text-center">
          <div class="breatcome-content-title">
            <h1>Programs</h1>
          </div>
          <div class="breatcome-content-text">
            <ul>
              <li><%= link_to 'Home', root_path, class: "nav-link active" %> <i class="fas fa-chevron-right"></i> <span><%= link_to 'Programs List', programs_path %></span></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% if @programs.empty? %>
  <div class="text-center">
    <h2>The programs list is empty at the moment...</h2>
  </div>
  <hr>
<% else %>

  <div class="blog-area style-four pt-65 pb-60">
    <div class="container">
      <div class="row pt-20">
        <div class="col-lg-8">
          <div class="row">
            <% @programs.each do |program| %>
              <div class="col-lg-6 col-md-6">

                <div class="dreamit-single-blog-box">
                  <div class="dreamit-blog-thumb">
                    <%= link_to image_tag(program.image, width: '200', class: "mx-auto d-block") %>
                    <div class="post-catgory">
                      <%= link_to program.name %>
                      <%= link_to program.kind %>
                    </div>
                  </div>
                  <div class="dreamit-blog-content">
                    <div class="dreamit-blog-title">
                      <h2>
                        <%= link_to program.name, program %>
                      </h2>
                    </div>
                    <div class="dreamit-blog-text">
                      <p><%= truncate(strip_tags(program.content.to_s), length: 120) %></p>
                    </div>
                    <div class="country-button">
                      <%= link_to 'Read more >', program, class: 'btn'  %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
<% end %>
<div class="visapro-blog-social">
  <ul>
    <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
    <li><a href="#"><i class="fab fa-twitter"></i></a></li>
    <li><a href="#"><i class="fab fa-google"></i></a></li>
    <li><a href="#"><i class="fab fa-linkedin-in"></i></a></li>
    <li><a href="#"><i class="fab fa-pinterest"></i></a></li>
    <li><a href="#"><i class="fab fa-reddit"></i></a></li>
  </ul>
  <div class="about-button pt-4">
    <%= link_to 'Back to the posts', posts_path, class: "btn" %>
  </div>
</div>

</div>
<div class="row">
  <div class="col-lg-12">
    <div class="pagiation">
      <div class="page-number pt-30">
        <ul>
          <li><a class="active" href="blog-grid.html">1</a></li>
          <li><a href="#">2</a></li>
          <li><a href="#">3</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
</div>
<div class="col-lg-4">
  <div class="sidebar-box">
    <div class="sidebar-search">
      <input type="text" name="search" placeholder="Search">
      <button type="text" name="submit"><i class="fas fa-search"></i></button>
    </div>
  </div>
  <div class="sidebar-box">
    <div class="sidebar-title">
      <h2>Categories</h2>
    </div>
    <div class="dreamit-section-bar mb-20"></div>
    <div class="sidebar-category">
      <ul>
        <li><a href="business-visa.html">Business Visa</a></li>
        <li><a href="immigration-visa.html">Immigration Visa</a></li>
        <li><a href="pr-visa.html">PR Visa</a></li>
        <li><a href="student-visa.html">Student Visa</a></li>
        <li><a href="working-visa">Working Visa</a></li>
      </ul>
    </div>
  </div>
  <div class="sidebar-category">
    <%= render 'orders/form_for_sidebar' %>
  </div>
</div>
</div>
</div>
</div>
